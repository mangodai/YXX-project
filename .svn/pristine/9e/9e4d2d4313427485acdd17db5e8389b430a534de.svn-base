		</div>
		<div
			style="width: 50%; height: 500px;  float: right;">
						<div id="p4" class="easyui-panel" title="试题类型"
				style="width: 520px; height: 480px; padding: 10px; background: #fafafa; float: left;"
				data-options="iconCls:'icon-save',closable:false,
        collapsible:true,minimizable:false,maximizable:false">
				<h3>这里是系统计算出的结论...</h3>
			</div>
			</div>
	</div>
	
	

	<script type="text/javascript">
	// 基于准备好的dom，初始化echarts实例
	var myChart1 = echarts.init(document.getElementById('left1'));
	var myChart2 = echarts.init(document.getElementById('left2'));
	var myChart3 = echarts.init(document.getElementById('left3'));
	
	$(document).ready(function() {
		
		//试题类别信息
		$.ajax({
			type:"post",
			url:"/exam/findSTLB",
			async:true,
			success:function(data){

				option = {
//						title : {
//							text : '某站点用户访问来源',
//							subtext : '纯属虚构',
//							x : 'center'
//						},
						tooltip : {
							trigger : 'item',
							formatter : "{a} <br/>{b} : {c} ({d}%)"
						},
						legend : {
							orient : 'vertical',
							left : 'left',
							data : [ '文字题', '图片题']
						},
						series : [ {
							name : '试题信息',
							type : 'pie',
							radius : '55%',
							center : [ '50%', '60%' ],
							data : data,
							itemStyle : {
								emphasis : {
									shadowBlur : 10,
									shadowOffsetX : 0,
									shadowColor : 'rgba(0, 0, 0, 0.5)'
								}
							}
						} ]
					};
				myChart1.setOption(option);
			},
			error:function(data){
				
			}
		});
		
		//试题类型信息
		$.ajax({
			type:"post",
			url:"/exam/findSTLX",
			async:true,
			success:function(data){

				option = {
//						title : {
//							text : '某站点用户访问来源',
//							subtext : '纯属虚构',
//							x : 'center'
//						},
						tooltip : {
							trigger : 'item',
							formatter : "{a} <br/>{b} : {c} ({d}%)"
						},
						legend : {
							orient : 'vertical',
							left : 'left',
							data : [ '判断题', '选择题']
						},
						series : [ {
							name : '试题信息',
							type : 'pie',
							radius : '55%',
							center : [ '50%', '60%' ],
							data : data,
							itemStyle : {
								emphasis : {
									shadowBlur : 10,
									shadowOffsetX : 0,
									shadowColor : 'rgba(0, 0, 0, 0.5)'
								}
							}
						} ]
					};
				myChart2.setOption(option);
			},
			error:function(data){
				
			}
		});
		
		//试题大类信息
		$.ajax({
			type:"post",
			url:"/exam/findSTDL",
			async:true,
			success:function(data){

				option = {
//						title : {
//							text : '某站点用户访问来源',
//							subtext : '纯属虚构',
//							x : 'center'
//						},
						tooltip : {
							trigger : 'item',
							formatter : "{a} <br/>{b} : {c} ({d}%)"
						},
						legend : {
							orient : 'vertical',
							left : 'left',
							data : [ '道路交通安全法律、法规和规章', '交通信号','安全行车、文明驾驶基础知识','机动车驾驶操作相关基础知识']
						},
						series : [ {
							name : '试题信息',
							type : 'pie',
							radius : '55%',
							center : [ '50%', '60%' ],
							data : data,
							itemStyle : {
								emphasis : {
									shadowBlur : 10,
									shadowOffsetX : 0,
									shadowColor : 'rgba(0, 0, 0, 0.5)'
								}
							}
						} ]
					};
				myChart3.setOption(option);
			},
			error:function(data){
				
			}
		});
	});
	</script>
